{
  "name": "ed25519-quirks",
  "description": "Web part of the Ed25519 Quirks app",
  "version": "0.1.0",
  "main": "src/mount.js",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "lint-wasm:fmt": "cd wasm && cargo fmt -- --check",
    "lint-wasm:clippy": "cargo clippy --manifest-path wasm/Cargo.toml --all --tests -- -D warnings",
    "lint-wasm": "npm run lint-wasm:fmt && npm run lint-wasm:check && npm run lint-wasm:clippy",
    "lint-web": "eslint --ext .js,.vue src test",
    "build-wasm": "wasm-pack build wasm",
    "test-wasm": "wasm-pack test wasm --headless",
    "test": "karma start --single-run",
    "build-web": "npm run clean && webpack --config webpack.config.js --mode=production",
    "build": "npm run build-wasm && npm run build-web",
    "build-opt": "npm run build-wasm && npm run build-web",
    "start": "webpack serve --mode=development"
  },
  "author": "Alex Ostrovski <ostrovski.alex@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@vue/test-utils": "^1.0.0-beta.32",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "chai-bytes": "^0.1.2",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "dirty-chai": "^2.0.1",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-vue": "^7.4.1",
    "karma": "^5.2.3",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-mocha": "^2.0.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^5.0.0-alpha.5",
    "mocha": "^7.1.1",
    "pug": "^3.0.2",
    "rimraf": "^3.0.2",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.2",
    "buffer": "^6.0.3",
    "copy-text-to-clipboard": "^2.2.0",
    "vue": "^2.6.12"
  }
}
