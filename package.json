{
  "name": "ed25519-quirks",
  "description": "Web part of the Ed25519 Quirks app",
  "version": "0.1.0",
  "main": "src/mount.js",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "lint-wasm:fmt": "cd wasm && cargo fmt -- --check",
    "lint-wasm:clippy": "cargo clippy --manifest-path wasm/Cargo.toml --all --tests -- -D warnings",
    "lint-wasm": "npm run lint-wasm:fmt && npm run lint-wasm:check && npm run lint-wasm:clippy",
    "lint-web": "eslint --ext .js,.vue src test",
    "build-wasm": "wasm-pack build wasm",
    "test-wasm": "wasm-pack test wasm --headless",
    "test": "karma start --single-run",
    "build-web": "npm run clean && webpack --config webpack.config.js --mode=production",
    "build": "npm run build-wasm && npm run build-web",
    "start": "webpack serve --mode=development"
  },
  "author": "Alex Ostrovski <ostrovski.alex@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@vue/compiler-sfc": "^3.0.11",
    "@vue/test-utils": "^2.0.0-rc.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "chai": "^4.3.4",
    "chai-bytes": "^0.1.2",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.2.4",
    "dirty-chai": "^2.0.1",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-vue": "^7.9.0",
    "karma": "^6.3.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-mocha": "^2.0.1",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^5.0.0",
    "mocha": "^8.4.0",
    "pug": "^3.0.2",
    "rimraf": "^3.0.2",
    "vue-loader": "^16.2.0",
    "vue-style-loader": "^4.1.3",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.0",
    "buffer": "^6.0.3",
    "copy-text-to-clipboard": "^3.0.1",
    "vue": "^3.0.11"
  }
}
