{
  "name": "ed25519-quirks",
  "description": "Web part of the Ed25519 Quirks app",
  "version": "0.1.0",
  "main": "src/mount.js",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:wasm": "npm-run-all lint:wasm:*",
    "lint:wasm:fmt": "cd wasm && cargo fmt -- --check",
    "lint:wasm:clippy": "cargo clippy --manifest-path wasm/Cargo.toml --all --tests -- -D warnings",
    "lint:js": "eslint --ext .js,.vue assets src test webpack.config.js",
    "build": "npm-run-all build:*",
    "build:font": "node assets/build-font.js",
    "build:wasm": "wasm-pack build wasm",
    "build:web": "npm run clean && webpack --config webpack.config.js --mode=production",
    "test": "npm-run-all \"test:wasm -- --chrome\" test:js",
    "test:wasm": "cd wasm && wasm-pack test --headless",
    "test:js": "karma start --single-run",
    "start": "webpack serve --mode=development"
  },
  "author": "Alex Ostrovski <ostrovski.alex@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@vue/compiler-sfc": "^3.3.2",
    "@vue/test-utils": "^2.4.0",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.0",
    "chai": "^4.3.4",
    "chai-bytes": "^0.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "dirty-chai": "^2.0.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-vue": "^9.19.2",
    "fantasticon": "^2.0.0",
    "html-webpack-plugin": "^5.6.0",
    "karma": "^6.4.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-mocha": "^2.0.1",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-spec-reporter": "0.0.36",
    "karma-webpack": "^5.0.0",
    "mini-css-extract-plugin": "^2.7.2",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.0",
    "pug": "^3.0.2",
    "pug-loader": "^2.4.0",
    "rimraf": "^5.0.0",
    "sass": "^1.69.3",
    "sass-loader": "^13.3.1",
    "toml": "^3.0.0",
    "vue-loader": "^17.4.0",
    "vue-style-loader": "^4.1.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.23.1",
    "bootstrap": "^5.3.0",
    "bootstrap-icons": "^1.11.0",
    "buffer": "^6.0.3",
    "copy-text-to-clipboard": "^3.2.0",
    "vue": "^3.3.2"
  }
}
